#ALIAS {go}
{

	#if {$adren == 0}
	{
		adren link
	}

	#if {$shield == 0}
	{
		cast 'shield' link
	}

	#if {$sanc == 0}
	{
		take black-potion;
		quaff black-potion
	}

	#if {$ss==1}
	{
		summon $target;
	}

	blast $target

}
{5}

#ALIAS {kill %0}
{
	emote climbs through the %0's shadow and jabs a knife in their thorax;
	hit $target
}
{5}

#ALIAS {powerup}
{
	attack 1;
	attack 6;
	attack 4;
	attack 3;
	shield;
	adren link;
	flame;
	gt =bless=;
	gt =armor=;
	cast 'shield' link;
	great
}
{5}

#ALIAS {psych %0}
{
	target %0;
	emote deadlocks $target;
	blast $target
}
{5}

#ALIAS {ss %0}
{
	#variable target %0;
	target %0;
	go
}
{5}

#ALIAS {target %0}
{
	#variable target %0;
	say about to dismantle %0, I'm just sayin
}
{5}

#ALIAS {turbossoff}
{
	#variable turbo 0
}
{5}

#ALIAS {turbosson}
{
	#variable turbo 1;
	#variable ss 1;
	emote gets a fiery looks in his eyes.
}
{5}

