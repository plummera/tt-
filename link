#ACTION {You receive your share of %0 experience.}
{
	#if {$turbo==1 && $ss==1}
	{
		summon $target;
		blast $target
	};
	#elseif {$turbo==1}
	{
		blast $target
	};
	#else
	{
		say We're good here.
	}
}
{5}

#ACTION {You send %0 flying into the wall!}
{
	blast $target
}
{5}

