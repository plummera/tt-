#ACTION {%0 tells the group '=%1='}
{
	%1 %0
}
{5}

#ACTION {A pile of gold coins.}
{
	take all.gold
}
{5}

#ACTION {H:%0 M:%1 V:%2 >}
{
	#variable hp %0;
	#variable mana %1;
	#variable move %2;
	#if {$hp<= 3000}
	{
		#delay {5} {gt I need a heal}
	};
	#read link
}
{5}

#ACTION {The white glow around %0 body fades.}
{
	blast
}
{5}

